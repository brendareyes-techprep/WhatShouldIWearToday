<h1>Contact Me</h1>

<% if notice %>
  <p style="color: green;"><%= notice %></p>
<% end %>

<%= form_with(model: @contact, url: contact_path, method: :post) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Send Message" %>
  </div>
<% end %>
