<div class="card-group" id="outfits">
  <% @outfits.each do |outfit| %>
    <div class="card">
      <% if outfit.items.present? %>
        <% first_item = outfit.items.first %>
        <img src="<%= first_item.photo_url %>">
        <div class="card-body">
          <h5 class="card-title">Outfit <%= outfit.created_at.strftime('%m/%d/%y') %></h5>
          <p class="card-text"><%= first_item.details %></p>
          <p class="card-text"><small class="text-body-secondary">Last updated <%= time_ago_in_words(outfit.updated_at) %> ago</small><%= link_to "Show this outfit", outfit %></p>
        </div>
      <% else %>
        <!-- Handle the case where the outfit has no items -->
        <div class="card-body">
          <p class="card-text">No items in this outfit</p>
          <%= link_to "Show this outfit", outfit %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
