<%= link_to "New outfit", new_outfit_path %>
<div class="card mb-3" style="max-width: 540px;">
<% if @outfits.any? %>
<% @outfits.each do |outfit| %>
  <div class="row g-0">
    <div class="col-md-4">
    <% if outfit.items.present? %>
    <% first_item = outfit.items.first %>
      <img src="<%= outfit.vibe %>" class="img-fluid rounded-start" alt="This is the vibe of the outfit">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= outfit.name %></h5>
        <p class="card-text"><small class="text-body-secondary">Last updated <%= time_ago_in_words(outfit.updated_at) %> <%= link_to "Show this outfit", outfit %></small></p>
    </div>
      <% else %>
        <div class="card-body">
            <p class="card-text">No items in this outfit</p>
            <%= link_to "Show this outfit", outfit %>
        </div>
      <% end %>
  </div>
  <% end %>
<% else %>
  <p>Uh oh, it looks like you haven't created anything yet!</p>
<% end %>
</div>
